<div>
  <div class='user_form'>
  <div class='title'>
    <h2><center>Instagram</center></h2>
  </div>
    <%= form_tag '/login' do %>
    <div class='username'>
      Username: <%= text_field_tag :username %><br>
    </div>
    <div class='email'>
      Email: <%= text_field_tag :email %><br>
    </div>
      Password: <%= text_field_tag :password %><br>
      <%= submit_tag "Log in" %>
    <% end %>
  </div>
</div>
